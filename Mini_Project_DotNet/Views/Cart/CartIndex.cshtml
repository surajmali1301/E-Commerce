@model IEnumerable<Mini_Project_DotNet.Models.Cart>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
        <p>Your cart is empty.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>
                        <img src="@Url.Content(item.Image)" style="width:100px; height:auto;" />
                            </td>
                            <td>@item.Products.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                    <td>₹@(item.Price * item.Quantity)</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Cart" asp-route-id="@item.CartId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Cart" asp-route-id="@item.CartId" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
        <div>
            <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Proceed to Checkout</a>
        </div>
}
